@using ZhouRod.SystemManage.Web.Models.Common.Modals
@model ZhouRod.SystemManage.Web.Models.SystemManage.SM.SMUsers.EditSMUserModalViewModel
@{
    Layout = null;
}
@Html.Partial("~/Views/Shared/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L("EditSMUser")))
 <div class="modal-body">
     <form name="SMUserEditForm" role="form" novalidate class="form-validation">
         <input type="hidden" name="Id" value="@Model.SMUser.Id" />
         <ul class="nav nav-tabs tab-nav-right" role="tablist">
            <li role="presentation" class="active"><a href="#edit-sMUser-details" data-toggle="tab">@L("SMUserDetails")</a></li>
        </ul>
         <div class="tab-content">
             <div role="tabpanel" class="tab-pane animated fadeIn active" id="edit-sMUser-details">
                 <div class="row clearfix" style="margin-top:10px;">
                     <div class="col-sm-12">
                         <div class="form-group form-float">
                             <div class="form-line">
                                 <input id="UserAccount" type="text" name="UserAccount" value="@Model.SMUser.UserAccount" required maxlength="50" minlength="2" class="validate form-control">
                                 <label for="UserAccount" class="form-label">@L("UserAccount")</label>
                            </div>
                        </div>
                    </div>
                </div>
                 <div class="row clearfix" style="margin-top:10px;">
                     <div class="col-sm-12">
                         <div class="form-group form-float">
                             <div class="form-line">
                                 <input id="Email" type="email" name="Email" value="@Model.SMUser.Email" required maxlength="50" minlength="2" class="validate form-control">
                                 <label for="Email" class="form-label">@L("Email")</label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
@Html.Partial("~/Views/Shared/Modals/_ModalFooterWithSaveAndCancel.cshtml")

<script src="~/view-resources/Views/SystemManage/SM/SMUsers/_EditModal.js" asp-append-version="true"></script>